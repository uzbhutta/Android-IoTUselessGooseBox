<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/instructionsLinearLayout"
        android:background="@color/brand_primary"
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:maxLines="10"
        android:paddingRight="20dp"
        android:text="Tap here to set the box to Preset Mode. Toggling the switch will then randomly execute one of the preset actions.\n\nAlternatively, you can select a preset action to execute it immediately."
        />

    </LinearLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="33dp"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:layout_below="@+id/instructionsLinearLayout"
        android:paddingLeft="20dp"
        android:elevation="0dp"
        android:background="@color/brand_grey"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUILT-IN ACTIONS"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:textColor="@color/blue_white_text"
                />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"    >

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerView"
            android:paddingTop="12dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/fab_container"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_marginTop="-18dp"
        android:elevation="5dp"
        android:layout_below="@+id/instructionsLinearLayout"
        >

        <LinearLayout
            android:id="@+id/media_controls_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

        </LinearLayout>


    </FrameLayout>

</RelativeLayout>